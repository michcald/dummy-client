{% extends 'layout.html.twig' %}

{% block breadcrumbs %}
    {{ breadcrumbs([
        {
            label: 'Repositories',
            url: url('dummy_client.repository.index')
        },
        {
            label: repository.getSingularLabel
        },
        {
            label: 'Fields',
            url: url('dummy_client.field.index', {
                repositoryId: repository.getId
            })
        },
        {
            label: field.getLabel
        },
        {
            label: 'Delete'
        }
    ]) }}
{% endblock %}

{% block page %}
    
    {% include 'repository/tab.html.twig' with {
        repository: repository,
        active: 'fields'
    } %}
    
    <h4>{{ field.getLabel }}</h4>
    
    {% include 'repository/field/tab.html.twig' with {
        repository: repository,
        field: field,
        active: 'delete'
    } %}
    
    <div class="alert alert-danger">
        <p>
            Do you really want to delete this repository field?
        </p>

        <br />

        <form role="form" method="post">
            <button type="submit" class="btn btn-danger">
                <span class="glyphicon glyphicon-remove"></span>
                Delete
            </button>
        </form>

    </div>

{% endblock %}