{% spaceless %}
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{{ whoAmI().getApp.getTitle }}</title>

        <!-- Bootstrap -->
        <link href="{{ bower('bootstrap/dist/css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('css/layout.css') }}" rel="stylesheet">

        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->

        <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
        <script src="{{ bower('jquery/dist/jquery.min.js') }}"></script>
        <!-- Include all compiled plugins (below), or include individual files as needed -->
        <script src="{{ bower('bootstrap/dist/js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('js/admin.js') }}"></script>
        
        {# for summernote html editor #}
        <link href="{{ asset('css/summernote.css') }}" rel="stylesheet">
        <link href="{{ bower('font-awesome/css/font-awesome.min.css') }}" rel="stylesheet">
        <script src="{{ asset('js/summernote.min.js') }}"></script>
    </head>
    <body>
        {% if repository is defined %}
            {{ navbar(repository) }}
        {% endif %}
        
        <div class="container">
            
            <div class="pull-left">
                {% block breadcrumbs %}{% endblock %}
            </div>
            <div class="col-md-1">
                {% block addButton %}{% endblock %}
            </div>
            <div class="clearfix"></div>
            
            {{ flashMessenger() }}
            
            {% block page %}{% endblock %}
        </div>

        {% if env() == 'dev' %}
            {{ restDebug() }}
        {% endif %}

    </body>
</html>
{% endspaceless %}