{% extends 'layout.html.twig' %}

{% block breadcrumbs %}
    {{ breadcrumbs([
        {
            label: 'Users',
            url: url('dummy_client.user.index')
        }
    ]) }}
{% endblock %}

{% block addButton %}
    {{ addButton(url('dummy_client.user.create')) }}
{% endblock %}

{% block page %}
    
    <div class="table-responsive">
        <table class="table table-hover table-striped table-condensed">
            <thead>
                <tr>
                    <th>User</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.username }}</td>
                        <td class="text-right">
                            {{ deleteButton(url('dummy_client.user.delete', {
                                username: user.username
                            })) }}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}