<form action="{{ url }}" method="get">
    {% if hiddens|length > 0 %}
        {% for hidden in hiddens %}
            <input type="hidden" name="filters[{{ loop.index }}][field]" value="{{ hidden.field }}" />
            <input type="hidden" name="filters[{{ loop.index }}][value]" value="{{ hidden.value }}" />
        {% endfor %}
    {% endif %}
    <div class="input-group container">
        {% if query is defined %}
            {% set value = query %}
        {% else %}
            {% set value = '' %}
        {% endif %}
        <input type="text" name="query" class="form-control" value="{{ value }}" placeholder="{{ placeholder }}">
        <span class="input-group-btn">
            <button class="btn btn-default" type="submit">
                <span class="glyphicon glyphicon-search"></span>
                Search
            </button>
        </span>
    </div>
</form>