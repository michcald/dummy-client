<input
    type="datetime-local"
    class="form-control"
    name="{{ element.getName }}"
    id="{{ element.getName }}"
    {% if element.getValue %}
        value="{{ element.getValue|date('Y-m-d') }}T{{ element.getValue|date('H:i') }}"
    {% else %}
        value="{{ 'now'|date('Y-m-d') }}T{{ 'now'|date('H:i') }}"
    {% endif %}
    {% if element.getDisabled %}
        disabled
    {% endif %}
    {% for attr,value in element.getOptions %}
        {{ attr }}="{{ value }}"
    {% endfor %}
    />