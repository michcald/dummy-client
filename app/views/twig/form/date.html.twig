<input
    type="date"
    class="form-control"
    name="{{ element.getName }}"
    id="{{ element.getName }}"
    {% if element.getValue %}
        value="{{ element.getValue }}"
    {% else %}
        value="{{ 'now'|date('Y-m-d') }}"
    {% endif %}
    {% if element.getDisabled %}
        disabled
    {% endif %}
    {% for attr,value in element.getOptions %}
        {{ attr }}="{{ value }}"
    {% endfor %}
    />