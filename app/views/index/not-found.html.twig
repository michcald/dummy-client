{% extends 'layout.html.twig' %}

{% block page %}

    <style>
        .error-template {padding: 40px 15px;text-align: center;background-image: url(data:image/png;base64,);}
        .error-actions {margin-top:15px;margin-bottom:15px;}
        .error-actions .btn { margin-right:10px; }
    </style>

    <div class="error-template">
        <h1>
            Oops!</h1>
        <h2>
            404 Not Found</h2>
        <div class="error-details">
            <p>Sorry, an error has occured, Requested page not found!</p>
            {% if env() == 'dev' %}
                {{ alert(message, 'warning') }}
            {% endif %}
        </div>
        <div class="error-actions">
            <a href="{{ url('dummy_client.index.index') }}" class="btn btn-primary btn-lg">
                <span class="glyphicon glyphicon-home"></span>
                Take Me Home
            </a>
            <a href="javascript:history.go(-1)" class="btn btn-default btn-lg">
                <span class="glyphicon glyphicon-circle-arrow-left"></span>
                Go back
            </a>
        </div>
    </div>
    
{% endblock %}