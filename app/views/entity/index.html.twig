{% extends 'layout.html.twig' %}

{% block breadcrumbs %}
    {{ breadcrumbs([
        {
            label: repository.getPluralLabel,
            url: url('dummy_client.entity.index', {
                repositoryId: repository.getId
            })
        }
    ]) }}
{% endblock %}

{% block addButton %}
    {{ addButton(url('dummy_client.entity.create', {
        repositoryId: repository.getId
    })) }}
{% endblock %}

{% block page %}

    {{ search() }}
    
    <div class="container text-center">
        {% include 'entity/partials/filters.html.twig' with {
            repositoryFields: repositoryFields
        } %}
    </div>

    <br />

    {% if entities.count == 0 %}
    
        <p class="alert alert-info">
            No results yet
        </p>

    {% else %}

        <div class="col-md-12">
            {{ paginator(entities.getPaginator, 'dummy_client.entity.index', {
                repositoryId: repository.getId
            }) }}
        </div>

        <div class="table-responsive">
            <table class="table table-condensed table-hover table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        {% for field in repositoryFields %}
                            {% if field.getList %}
                                <th>
                                    {{ field.getLabel }}
                                </th>
                            {% endif %}
                        {% endfor %}
                    </tr>
                </thead>
                <tbody>
                    {% for entity in entities %}
                        {% set entityArray = entity.toArray %}
                        <tr>
                            <td>{{ entity.getId }}</td>
                            {% for field in repositoryFields %}
                                {% if field.getList %}
                                <td>
                                    {{ entityArray[field.getName] }}
                                </td>
                                {% endif %}
                            {% endfor %}
                            <td class="text-right">
                                <a href="{{ url('dummy_client.entity.read', {
                                    repositoryId: repository.getId,
                                    id: entity.getId
                                }) }}">
                                    <span class="glyphicon glyphicon-book"></span> read
                                </a>
                                &emsp;
                                <a href="{{ url('dummy_client.entity.update', {
                                    repositoryId: repository.getId,
                                    id: entity.getId
                                }) }}" class="orange">
                                    <span class="glyphicon glyphicon-edit"></span> update
                                </a>
                                &emsp;
                                <a href="{{ url('dummy_client.entity.delete', {
                                    repositoryId: repository.getId,
                                    id: entity.getId
                                }) }}" class="red">
                                    <span class="glyphicon glyphicon-trash"></span> delete
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

    {% endif %}
    
{% endblock %}
